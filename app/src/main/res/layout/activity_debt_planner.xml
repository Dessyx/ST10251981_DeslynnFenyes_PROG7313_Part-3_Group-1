<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/debt_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Back button with icon on the left -->

        <!-- Spacer -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:paddingTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Menu button with icon on the right -->
        <ImageButton
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Amount of Debt Section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:paddingBottom="33dp"
            android:text="Debt Planner"
            android:textColor="@android:color/black"
            android:textSize="42sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kosugi_maru"
            android:text="Amount of Debt"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/debtAmountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:padding="16dp"
            android:text="R20 000"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:fontFamily="@font/kosugi_maru"
            android:layout_marginBottom="24dp"/>

        <!-- Salary Total Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kosugi_maru"
            android:text="Salary Total"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/salaryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:padding="16dp"
            android:text="R45 000"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:fontFamily="@font/kosugi_maru"
            android:layout_marginBottom="24dp"/>

        <!-- Period Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Period To Pay off Debt"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/kosugi_maru"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/periodSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/text_background"
            android:layout_marginBottom="48dp"/>

        <!-- Save Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kosugi_maru"
                    android:text="SAVE"
                    android:textColor="@android:color/black"
                    android:textSize="29sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_piggy" />
            </LinearLayout>

            <TextView
                android:id="@+id/monthlyPaymentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/text_background"
                android:fontFamily="@font/kosugi_maru"
                android:padding="12dp"
                android:text="R2500"
                android:textColor="@android:color/black"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kosugi_maru"
                android:text="per month to pay off debt"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>