<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".SetBudgetActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:paddingTop="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Menu button with icon on the right -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Monthly Budget Section -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/abhaya_libre_extrabold"
                android:paddingTop="35dp"
                android:text="Set Budget"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/barlow_bold"
                android:paddingTop="20dp"
                android:text="Total Monthly Budget"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Category Limits Section -->
            <com.google.android.material.slider.Slider
                android:id="@+id/totalBudgetSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:thumb="@drawable/custom_thumb"
                android:valueFrom="0"
                android:valueTo="15000"
                app:haloColor="@android:color/transparent"
                app:labelBehavior="floating"
                app:thumbTint="@null"
                app:trackColor="@color/ButtonPink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/barlow_bold"
                android:text="Set Category Limits"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Save Budget Button -->

            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="393dp"
                android:layout_height="411dp"
                android:orientation="vertical">

                <!-- Add Category Button -->
                <LinearLayout
                    android:id="@+id/addCategoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_add_category" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Add Category"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Food Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_food" />

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Food"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/foodSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:thumb="@drawable/custom_thumb"
                        app:trackColor="@color/ButtonPink"
                        app:thumbTint="@null"
                        app:haloColor="@android:color/transparent" />
                </LinearLayout>

                <!-- Transport Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_transport" />

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Transport"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/transportSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:thumb="@drawable/custom_thumb"
                        app:trackColor="@color/ButtonPink"
                        app:thumbTint="@null"
                        app:haloColor="@android:color/transparent" />
                </LinearLayout>

                <!-- Pet Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_pet" />

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Pet"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/petSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:thumb="@drawable/custom_thumb"
                        app:trackColor="@color/ButtonPink"
                        app:thumbTint="@null"
                        app:haloColor="@android:color/transparent" />
                </LinearLayout>

                <!-- Entertainment Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_entertainment" />

                    <TextView
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Entertainment"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/entertainmentSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:thumb="@drawable/custom_thumb"
                        app:trackColor="@color/ButtonPink"
                        app:thumbTint="@null"
                        app:haloColor="@android:color/transparent" />
                </LinearLayout>

                <!-- Luxuries Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_luxuries" />

                    <TextView
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kosugi_maru"
                        android:text="Luxuries"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/luxuriesSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        android:valueTo="5000"
                        android:thumb="@drawable/custom_thumb"
                        app:trackColor="@color/ButtonPink"
                        app:thumbTint="@null"
                        app:haloColor="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBudgetButton"
                android:layout_width="304dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/kosugi_maru"
                android:text="Save Budget"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:cornerRadius="0dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
