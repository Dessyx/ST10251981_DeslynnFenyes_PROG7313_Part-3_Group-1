<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <!-- Back button with icon on the left -->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Menu button with icon on the right -->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu" />
            </LinearLayout>




            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win awards"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Goal Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textSize="16sp"
                android:layout_marginTop="32dp" />

            <EditText
                android:id="@+id/etGoal"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:inputType="number" />

            <!-- Trophy Icon and Goal Achieved -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_trophy"
                    android:contentDescription="Trophy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Goal achieved !!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Gift Card -->
            <ImageView
                android:id="@+id/ivGiftCard"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/giftcard"
                android:layout_marginTop="24dp"
                android:contentDescription="Gift card" />

            <!-- Badge Image -->
            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/badge"
                android:layout_marginTop="24dp"
                android:contentDescription="Badge" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>