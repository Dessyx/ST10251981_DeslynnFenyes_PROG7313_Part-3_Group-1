<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Top icons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Back button with icon on the left -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
           <!-- app:tint="@android:color/black"-->


    </LinearLayout>


    <!-- Dashboard Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#000000"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/userProfileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="User Profile"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_profile"
            app:layout_constraintBottom_toBottomOf="@id/pageTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pageTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Savings and Spending Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/card_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_savings"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dash_savings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 5 000.00"
                android:textColor="#E91E63"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/card_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Spent"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R3730.00"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="vertical"
        android:padding="1dp">

        <!-- Title -->
        <TextView
            android:id="@+id/spentTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Total spent per category"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Filters Row -->
        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CategoryFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/barlow_medium"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/black" />

            <Space
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/FilterDate"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter by Date"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/card_border"
            android:orientation="horizontal"
            android:padding="1dp">

            <!-- Category Spinner -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/filter_category" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/categories_array"
                android:minHeight="48dp"
                android:prompt="@string/category_prompt"
                android:spinnerMode="dropdown" />

            <!-- Month Spinner -->
            <Space
                android:layout_width="34dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="62dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/filter_date" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginTop="0dp"
                android:entries="@array/months_array"
                android:minHeight="48dp"
                android:prompt="@string/month_prompt"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>


    <!-- Placeholder for bar chart -->

    <!-- Spending Trends -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:text="Feature coming soon"
        android:textColor="#888888"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/spendingTrendsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spending trends for March"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Placeholder for line chart -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:text="Feature coming soon"
        android:textColor="#888888"
        android:textStyle="italic" />

    <!-- Gift Card Section -->
    <LinearLayout
        android:id="@+id/giftCardSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:weightSum="3.5"
        android:background="@android:color/white">

        <!-- Badge -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/badgeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_badge"
                android:contentDescription="Badge" />

            <TextView
                android:id="@+id/badgeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Gift Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/giftCardImage"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:contentDescription="Gift Card"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_giftcard" />
        </LinearLayout>

        <!-- Progress Section (more space) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/giftCardProgressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gift card progress"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <ProgressBar
                android:id="@+id/giftCardProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:progress="60"
                android:max="100"
                android:progressDrawable="@drawable/progress_giftcard" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
