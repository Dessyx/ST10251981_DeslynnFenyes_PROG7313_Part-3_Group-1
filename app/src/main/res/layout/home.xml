<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bgGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_bg"
        app:layout_constraintBottom_toTopOf="@id/historyTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Greeting -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!\nMr. Xavier Martin"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Menu Icon -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Active Balance Label -->
    <TextView
        android:id="@+id/activeBalanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active balance"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Active Balance Value -->
    <TextView
        android:id="@+id/activeBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R 41,570.00"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/activeBalanceLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Action Buttons Layout -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="361dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activeBalanceValue">

        <!-- 1. Add Expense -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Add Expense"
                android:src="@drawable/ic_expense" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/add_expense"
                android:textSize="30sp" />
        </LinearLayout>

        <!-- 2. Set Budget -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Set Budget"
                android:src="@drawable/ic_budget" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Set Budget"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 3. Add Category -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Add Category"
                android:src="@drawable/ic_category" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Add Category"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 4. Debt Planner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Debt Planner"
                android:src="@drawable/ic_debt" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Debt Planner"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <!-- History Title -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/actionButtons"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView for Transactions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionHistory"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Budget Goal Box -->
    <LinearLayout
        android:id="@+id/budgetGoalBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_white"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/transactionHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Monthly budget goal: "
            android:textColor="@android:color/black"/>
        <TextView
            android:text="R40 000"
            android:textColor="#6FCF97"
            android:textStyle="bold"/>
        <Button
            android:text="See dashboard"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Saving Progress Box -->
    <LinearLayout
        android:id="@+id/savingProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_white"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/budgetGoalBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="This month's saving progress"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:text="Categories flagged overspent: "
            android:layout_marginTop="4dp"/>
        <TextView
            android:text="Food, Entertainment"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="82"
            android:progressTint="@android:color/black"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
