<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/sett_background">


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="727dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <!-- Back button with icon on the left -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>


        <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Profile Image -->

        <!-- Savings Display -->

        <ImageView
            android:layout_width="92dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/ic_profile_placeholder" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Saved"
            android:textColor="#888888"
            android:textSize="14sp" />

        <!-- Input Fields -->

        <TextView
            android:id="@+id/tvTotalSaved"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/savings_background"
            android:padding="16dp"
            android:text="@string/r_29_862"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="307dp"
            android:layout_height="48dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/surname"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/save"
            android:textColor="#FFFFFF" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnDeleteProfile"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/delete_profile"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>