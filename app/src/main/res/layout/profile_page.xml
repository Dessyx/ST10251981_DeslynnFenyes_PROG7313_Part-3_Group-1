<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/sett_background">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <!-- Back button with icon on the left -->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Menu button with icon on the right -->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu" />
            </LinearLayout>


            <!-- Title -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <!-- Profile Image -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_profile_placeholder"
                android:contentDescription="Profile Image" />

            <!-- Savings Display -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tvTotalSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 29 862"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/savings_background"
                android:padding="16dp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_border" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_border" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_border" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:layout_marginTop="24dp" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>