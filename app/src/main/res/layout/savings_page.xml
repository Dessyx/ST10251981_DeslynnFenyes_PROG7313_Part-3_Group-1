<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Back and Menu Icons -->

            <!-- Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Savings Icon"
                    android:src="@drawable/ic_piggy" />

                <TextView
                    android:text="Savings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <!-- Envelope image and total saved -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/envelope"
                android:layout_marginTop="24dp"
                android:contentDescription="Envelope with Savings" />

            <TextView
                android:id="@+id/tvTotalSavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 5 000.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <!-- Input and Add button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

                <TextView
                    android:text="Save money:"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/etSaveAmount"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="Amount saved"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnAddSavings"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:layout_marginStart="8dp"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Progress Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This monthâ€™s saving progress:"
                android:layout_marginTop="8dp" />

            <ProgressBar
                android:id="@+id/progressBarSavings"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="24dp"
                android:progress="80"
                android:max="100"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/progress_bar_custom" />

            <!-- Progress Text -->
            <TextView
                android:id="@+id/tvProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:layout_marginTop="4dp" />

            <!-- Motivation Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="A penny saved is a\npenny earned!"
                android:textAlignment="center"
                android:textColor="#EEC5D9"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>